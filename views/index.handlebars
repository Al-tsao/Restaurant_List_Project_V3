<!-- search bar -->
<div class="container search-bar mt-3">
  <div class="row justify-content-between">
    <div class="search-bar-inner">
      <form action="/search">
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
    <div class="dropdown ml-4>
      <form action=" /">
      <button class="btn btn-outline-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown"
        aria-haspopup="true" aria-expanded="false" style="width: 100px;">
        Sort
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <a class="dropdown-item" href="/sort/name/asc">A → Z</a>
        <a class="dropdown-item" href="/sort/name/desc">Z → A</a>
        <a class="dropdown-item" href="/sort/category/asc">類別</a>
        <a class="dropdown-item" href="/sort/location/asc">地區</a>
      </div>
      </form>
    </div>
  </div>
</div>
<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class=" card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
            <div class="card-footer px-3 d-flex justify-content-between">
              <div>
                <a class="btn btn-outline-secondary btn-sm mr-2" href="/restaurants/{{this._id}}" role="button"><i
                    class="fas fa-info-circle"></i></a>
                <a class="btn btn-outline-secondary btn-sm" href="/restaurants/{{this._id}}/edit" role="button"><i
                    class="fas fa-edit"></i></a>
              </div>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" onsubmit="return deleteAlert()"
                style="display: inline;">
                <button class="btn btn-outline-danger btn-sm" type="submit">X</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>